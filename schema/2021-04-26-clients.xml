<?xml version="1.0" encoding="UTF-8"?>   
<databaseChangeLog  
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">  

    <changeSet author="mkorman" id="2021-04-26-clients">
        <createTable tableName="clients">
            <column name="id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="gender" type="char(1)">
            </column>
            <column name="first_name" type="varchar(255)">
            </column>
            <column name="last_name" type="varchar(255)">
            </column>
            <column name="home_address" type="varchar(1024)">
            </column>
            <column name="phone_number" type="varchar(64)">
            </column>
            <column name="email" type="varchar(64)">
            </column>
            <column name="birth_date" type="timestamp">
            </column>
            <column name="deleted" type="boolean" defaultValue="false">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="clients" columnNames="id" constraintName="clients_pkey" />

        <createTable tableName="clients_credit_cards">
            <column name="client_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="number" type="varchar(32)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="clients_credit_cards" columnNames="client_id,number" constraintName="clients_credit_cards_pkey" />
        <addForeignKeyConstraint baseTableName="clients_credit_cards" referencedTableName="clients" 
                                 baseColumnNames="client_id" referencedColumnNames="id" 
                                 constraintName="fk_clients_credit_cards" 
                                 onDelete="CASCADE" onUpdate="CASCADE" />

        <createTable tableName="clients_changes">
            <column name="id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="client_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="change_type" type="varchar(64)">
            </column>
            <column name="change_timestamp" type="timestamp">
            </column>
            <column name="author" type="uuid">
            </column>
            <column name="changeset" type="text" defaultValue="">
            </column>
        </createTable>
        <addPrimaryKey tableName="clients_changes" columnNames="id,client_id" constraintName="clients_changes_pkey" />
        <addForeignKeyConstraint baseTableName="clients_changes" referencedTableName="clients" 
                                 baseColumnNames="client_id" referencedColumnNames="id" 
                                 constraintName="fk_clients_clients_changes" 
                                 onDelete="CASCADE" onUpdate="CASCADE" />
    </changeSet>

</databaseChangeLog>
